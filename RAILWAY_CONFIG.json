{
  "projectId": "your-railway-project-id",
  "name": "todo-app-backend",
  "region": "us-west-1",
  "runtime": "CONTAINER",
  "dockerfilePath": "Phase-4/backend/Dockerfile",
  "buildContextPath": "Phase-4/backend",
  "variables": {
    "DATABASE_URL": {
      "description": "PostgreSQL database URL (will be auto-generated by Railway)",
      "required": true
    },
    "BETTER_AUTH_SECRET": {
      "description": "Secret key for authentication",
      "required": true,
      "example": "generate-a-random-string-at-least-32-chars-long"
    },
    "BETTER_AUTH_URL": {
      "description": "Frontend URL (replace with your Vercel frontend URL)",
      "required": true,
      "example": "https://your-frontend.vercel.app"
    },
    "COHERE_API_KEY": {
      "description": "Cohere API key for AI features (optional)",
      "required": false
    }
  },
  "addons": [
    {
      "type": "postgresql",
      "name": "todo-postgres",
      "plan": "free"
    }
  ],
  "environment": "production",
  "domain": "todo-app-backend-production.up.railway.app"
}